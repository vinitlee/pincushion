body
  width 100vw
  height 100vh
  margin 0
  background #556
  font-family Helvetica, sans-serif

h1,h2,h3,h4,h5
  margin 0

p
  &:first-child
    margin-top 0px
  &:last-child
    margin-bottom 0px

header
  padding 14px 14px
  background white
  
.page
  line-height 1.44em
  margin 30px
  padding 14px 14px 14px
  background #EEE
  box-shadow inset 0 0 1px 1px white, 0 5px 10px rgba(0,0,0,0.4), 0 -2px 3px rgba(0,0,0,0.2)
  border-radius 3px
  text-align justify
  
.dot
  width 14px
  height 14px
  transform translate(-50%,-50%)
  border-radius 50%
  &.blue
    background-color blue
  &.red
    background-color red
  &.green
    background-color green